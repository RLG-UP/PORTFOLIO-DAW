<%- include("./partials/header"); -%>
    <div class="logo">
    <img src="../images/formula-1-logo-7.png" alt="lion brewery" />
    </div>
    <div>
    <h1><strong>Welcome to F1 <i>DB</i></strong></h1>
    </div>
    
    <form action="/add" method="POST">
        <h2><i>Driver information</i></h2>
        <input type="text" name="num" id="num" placeholder="Number" />
        <input type="text" name="code" id="code" placeholder="Code" />
        <input type="text" name="name" id="name" placeholder="Name" />
        <input type="text" name="lname" id="lname" placeholder="Last name" />
        <br />
        <label for="dob">Date of birth: </label>
        <input type="date" name="dob" id="dob" />
        <label for="url">Biography URL: </label>
        <input type="url" name="url" id="url" />
        <br />
        <label for="nation">Nationality: </label>
        <select name="nation" id="nation">
            <%countries.forEach((pays, i)=>{%>
                <option value="<%=pays.code%>"><%=pays.label%></option>
            <%})%>
            
        </select>
        <label for="team">Team: </label>
        <select name="team" id="team">
            <%equipe.forEach((eq, i)=>{%>
                <option value="<%=eq.code%>"><%=eq.label%></option>
            <%})%>

        </select>
        <p> <input type="submit" /> </p>

    </form>
    
    <div>
        <h2><i>Registered Drivers</i></h2>
        

        <table class="driverTable">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Code</th>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>DoB</th>
                    <th>Nationality</th>
                    <th>URL</th>
                    <th>Current Team</th>
                </tr>
            </thead>
            <tbody>
                <%if(arrDrivers.length > 0){%>
                    <%arrDrivers.forEach((dr, i)=>{%>
                        <tr>
                            <td><%=dr.num%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.code%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.forename%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.surname%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.dob.toLocaleDateString()%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.nationality%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.team.url%><i class="fa-solid fa-pen-to-square"></i></td>
                            <td><%=dr.team.name%><i class="fa-solid fa-pen-to-square"></i></td>
                        </tr>
                    <%})%>
                <%}else{%>
                    <tr>
                        <td colspan="9">No Drivers</td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        
    </div>

    <%- include("./partials/footer"); -%>